<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="materials.xacro" />
    <xacro:include filename="inertial_macros.xacro" />

    <link name="base">
    </link>

    <!-- BASE -->
    <joint name="base_to_chassis" type="fixed">
        <parent link="base" />
        <child link="chassis" />
        <origin xyz="-0.1 0 0" rpy="0 0 0" />
    </joint>

    <!-- CHASSIS -->
    <link name="chassis">
        <visual>
            <origin xyz="0.1 0 0.025" rpy="0 0 0" />
            <geometry>
                <box size="0.2 0.1 0.05" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.1 0 0.025" rpy="0 0 0" />
            <geometry>
                <box size="0.2 0.1 0.05" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.2" y="0.1" z="0.05">
            <origin xyz="0.1 0 0.025" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base" />
        <child link="left_wheel" />
        <origin xyz="0 0.05 0" rpy="${-pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.015" length="0.02" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.015" length="0.02" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.015" length="0.02">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <!-- RIGHT WHEEL -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base" />
        <child link="right_wheel" />
        <origin xyz="0 -0.05 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.015" length="0.02" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.015" length="0.02" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.015" length="0.02">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEELS -->
    <joint name="front_caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="front_caster_wheel" />
        <origin xyz="0.18 0 0" rpy="0 0 0" />
    </joint>
    <link name="front_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0125" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0125" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.05" radius="0.0125">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
    </link>
    <joint name="rear_caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="rear_caster_wheel" />
        <origin xyz="0.02 0 0" rpy="0 0 0" />
    </joint>
    <link name="rear_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0125" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0125" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.05" radius="0.0125">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
    </link>
</robot>